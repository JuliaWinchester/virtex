{
    "compilerOptions": {
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "module": "es6",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "lib": ["es6", "dom"],
        "types": [
            "base-component",
            "key-codes",
            "jquery",
            "three",
            "webvr-api"
        ]
    },
    "files": [
        "src/Definitions.ts",
        "src/StringValue.ts",
        "src/FileType.ts"
    ],
    "include": [
        "src/**/*",
        "typings/**/*"
    ]
}